{% extends 'base.html.twig' %}

{% block title %}Blog®{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hej! Witaj na prostym blogu^^</h1>
        <h2><a href="{{ path('registry') }}">Zarejestruj się</a></h2>
        <h2><a href="{{ path('login') }}">Logowanie</a></h2>
        <h2><a href="{{ path('post_write_blog') }}">Napisz se bloga</a></h2>
    </div> <br/> <br/>

  {% for post in posts %}
    <div class="example-wrapper">
        <h3>{{ post.title }}</h3>
        <p>{{ post.content }}</p>
        {{ post.createdAt|date() }}
        {{ post.getUser }}
    </div>
{% endfor %}

{% endblock %}





